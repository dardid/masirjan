{% extends 'admin/base.html.twig' %}

{% block pageTitle %}{% trans %}admin.news{% endtrans %}{% endblock %}
{% block pageBody %}
    <h1>{% trans %}admin.news{% endtrans %}</h1>
    <a class="btn btn-primary" href="{{ path('adminNewsNew') }}">{% trans %}admin.news.new{% endtrans %}</a>
    <hr>
    <div class="table-responsive">
        <table class="table table-sm table-bordered table-hover text-center">
            <thead class="bg-dark text-light">
            <tr>
                <th>{% trans %}table.ID{% endtrans %}</th>
                <th>{% trans %}admin.news.title{% endtrans %}</th>
                <th>تاریخ ایجاد</th>
                <th>دسته بندی</th>
                <th>امکانات</th>
            </tr>
            </thead>
            <tbody class="">
            {% for nnew in news %}
                <tr class="">
                    <td>{{ loop.index }}</td>
                    <td>{{ nnew.title }}</td>
                    <td>{{ Jdate.jdate('Y/n/d',nnew.dateSubmit) }}</td>
                    <td>{{ nnew.cat.catName }}</td>
                    <td>
                        <a class="btn btn-sm btn-danger">حذف</a>
                        <a class="btn btn-sm btn-warning" href="{{ path('adminNewsEdit',{'id':nnew.id}) }}">ویرایش</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}